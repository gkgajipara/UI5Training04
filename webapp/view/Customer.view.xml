<mvc:View
    controllerName="at.clouddna.training04.zhoui5.controller.Customer"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.uxap"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <u:ObjectPageLayout
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <u:headerTitle>
            <u:ObjectPageDynamicHeaderTitle>
                <u:expandedHeading>
                    <Title text="Kundendetails" />
                </u:expandedHeading>

                <u:actions>
                <Button
                    id="app_change_button"
                    text="{i18n>change}"
                    icon="sap-icon://change"
                    press="onEditPress"
                    visible="{= !${viewModel>/editMode}}"

                />
                </u:actions>
            </u:ObjectPageDynamicHeaderTitle>
        </u:headerTitle>
        <u:footer>
            <Toolbar id="app_bar_footer">
            <ToolbarSpacer />
                <Button
                    id="app_save_button"
                    text="{i18n>save}"
                    type="Accept"
                    icon="sap-icon://save"
                    press="onSavePressed"
                    visible="{viewModel>/editMode}"
                />
                   <Button
                    id="app_cancel_button"
                    text="{i18n>cancel}"
                    type="Accept"
                    icon="sap-icon://cancel"
                    press="onCancelPressed"
                    visible="{viewModel>/editMode}"
                />
            </Toolbar>
        </u:footer>
    </u:ObjectPageLayout>
</mvc:View>
